<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hazup.isochoric.greaterorlessthan">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logogame"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".controller.MainMenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controller.GameScreenActivity"
            android:theme="@style/AppInGameTheme"
            android:screenOrientation="portrait"/>
        <activity android:name=".controller.SettingsActivity" />
        <activity android:name=".controller.HighScoresActivity" />
        <activity android:name=".controller.Authenticate" />
        <activity android:name=".controller.PostToTwitterActivity" />
        <activity android:name=".controller.ViewRulesActivity"></activity>
    </application>

</manifest>